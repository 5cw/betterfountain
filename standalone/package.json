{
  "name": "betterfountain-standalone",
  "productName": "betterfountain-standalone",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [],
  "author": {
    "name": "piersdeseilligny",
    "email": "piers.deseilligny+github@outlook.com"
  },
  "license": "GPL-3.0-only",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./logo/iconB.png"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "betterfountain_standalone"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/renderer/index.html",
                  "js": "./src/renderer/renderer.ts",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/plugin-webpack": "6.0.0-beta.54",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "copy-webpack-plugin": "^6.3.2",
    "css-loader": "^4.2.1",
    "electron": "11.0.3",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.20.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "monaco-editor-webpack-plugin": "^3.0.0",
    "node-loader": "^1.0.1",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2",
    "source-map-loader": "^1.1.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.2",
    "typescript": "^4.0.2",
    "worker-loader": "^3.0.7"
  },
  "dependencies": {
    "@lumino/commands": "^1.12.0",
    "@lumino/default-theme": "^0.7.0",
    "@lumino/dragdrop": "^1.7.0",
    "@lumino/messaging": "^1.4.3",
    "@lumino/widgets": "^1.16.0",
    "electron-squirrel-startup": "^1.0.0",
    "monaco-editor": "^0.22.1",
    "monaco-editor-core": "^0.22.1",
    "node-stream-zip": "^1.12.0",
    "promise-worker": "^2.0.1",
    "uuid": "^8.3.2",
    "vscode-codicons": "0.0.12",
    "vscode-html-languageservice": "^4.0.1"
  }
}
