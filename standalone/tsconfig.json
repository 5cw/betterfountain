{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es2015",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib":[
      "DOM",
      "WebWorker",
      "ES2015"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
